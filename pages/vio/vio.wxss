.box {
  width: 100%;
}

/* 内容区 */
.content {
  width: 100%;
}

.sv {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  height: 60rpx;
  line-height: 60rpx;
}

.svItem {
  padding: 0 16rpx;
}

.isActive {
  color: #d9b;
  border-bottom: 2rpx solid #d9b;
}

/* 视频区域 */
.sv2 {
  padding: 5rpx 5rpx;
  box-sizing: border-box;
  width: 100%;
  height: calc(100vh - 150rpx);
}

.sv2 image {
  width: 100%;
  height: 370rpx;
  border-radius: 5rpx;
}

.sv2 text {
  height: 50rpx;
  font-size: 22rpx;
  line-height: 25rpx;
  width: 100%;
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}