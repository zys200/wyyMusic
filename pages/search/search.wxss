.box {
  width: 100%;
}

/* 头部区域 */
.header {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 2rpx solid black;
}

.icons {
  margin-left: 10rpx;
}

.inp {
  flex: 1;
  margin: 10rpx 20rpx;
  padding: 0 10rpx;
  border: 1rpx solid green;
  height: 50rpx;
  border-radius: 10rpx;
}

.header button {
  margin-right: 20rpx;
  width: 150rpx;
  height: 55rpx;
  color: #dd99bb;
  border: 10rpx;
  font-size: 33rpx;
  line-height: 55rpx;
  background-color: rgba(red, green, blue, .1);
}

/* 预搜索 */
.res {
  width: 100%;
}

.resItem {
  height: 50rpx;
  padding: 3rpx 10rpx;
  border-bottom: 1rpx solid #ebdce3;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

.resItem text {
  line-height: 50rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

/* 热门歌曲 */
.title {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 30rpx;
}

.hot {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.hotItem text:first-child {
  padding: 0 5rpx;
  padding-left: 70rpx;
}

.hotItem image {
  width: 35rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

/* 搜索结果 */
.searchRes {
  width: 100%;
}

.srItem {
  display: flex;
  width: 100%;
  height: 60rpx;
  margin: 5rpx 0;
}

.srItem image {
  margin: 5rpx 40rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
}

.srItem text {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}