.box {
  width: 100%;
}

/* 内容区域 */
/* 轮播图 */
.content {
  width: 100%;
}

.sp {
  width: 100%;
  height: 330rpx;
}

.sp image {
  width: 100%;
  height: 330rpx;
}

/* lists */
.lists {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  width: 100%;
  text-align: center;
  border-bottom: 1rpx solid gray;
}

.lists view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lists view text {
  text-align: center;
}

.lists view text:first-child {
  font-size: 80rpx;
  color: #dd99bb;
}

.lists view text:last-child {
  font-size: 22rpx;
}

/* hot */
.hot {
  width: 100%;
}

.sv {
  display: flex;
  word-wrap: normal;
  margin: 0 auto;
  width: 96%;
  height: 300rpx;
  border: 2rpx solid gray;
  border-radius: 8rpx;
}

.svItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
  border-radius: 10rpx;
}

.svItem image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
}

.svItem text {
  font-size: 26rpx;
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-align: center;
}

/* leaderboard */
.leaderboard {
  width: 100%;
  margin: 5rpx 0;
}

.txt {
  display: inline-block;
  margin-top: 10rpx;
  padding-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  color: gray;
}

/* 滑块 */
.spOne {
  width: 100%;
  height: 370rpx;
  margin-top: 10rpx;
}

.spItem {
  width: 70%;
  border: 1rpx solid gray;
  border-radius: 30rpx;
  background-color: rgb(252, 249, 249);
}

.sps {
  display: flex;
  flex-direction: column;
  padding: 5rpx 10rpx;
}

.sps>text {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.spc {
  display: flex;
  align-items: center;
  margin: 10rpx 30rpx;
}

.spc image {
  margin-right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.spc text {
  display: inline-block;
  margin-right: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.spc text:last-child {
  width: 400rpx;
}