.box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  overflow: hidden;
}

.title {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(238, 200, 233);
}

/* 动画 */
.content {
  position: relative;
  width: 100%;
  height: calc(100vh - 220rpx);
  background-color: rgb(131, 127, 127);
}

.top .yuan {
  position: absolute;
  top: 10rpx;
  left: 327rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  z-index: 100;
}

.ti {
  position: absolute;
  top: 70rpx;
  left: 333rpx;
  width: 200rpx;
  height: 270rpx;
  z-index: 99;
  transform: rotate(-30deg);
  transform-origin: 10rpx 10rpx;
  transition: 1.5s;
}

.isPlay {
  transform: rotate(0deg);
  transform-origin: 10rpx 10rpx;
}

.bottom image {
  position: absolute;
  top: 190rpx;
  left: 80rpx;
  width: 600rpx;
  height: 600rpx;
}

.ci image {
  position: absolute;
  top: 310rpx;
  left: 200rpx;
  width: 360rpx;
  height: 360rpx;
  border-radius: 50%;
}

.centerImgs {
  animation: centerImgs 10s linear infinite;
  animation-delay: 1.5s;
}

@keyframes centerImgs {
  to {
    transform: rotate(360deg)
  }
}

/* 底部 */
.latest {
  position: relative;
  bottom: 0rpx;
  width: 100%;
  height: 120rpx;
  background-color: rgb(158, 133, 199);
}

.jindu {
  position: absolute;
  top: -100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50rpx;
}

.jindu view {
  padding: 0 10rpx;
}

.line {
  position: relative;
  width: 430rpx;
  border-top: 2rpx solid white;
}

.innerline {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  padding: 0;
  border-top: 6rpx solid #dd99bb;
}

.ss {
  position: absolute;
  top: -10rpx;
  width: 14rpx;
  height: 19rpx;
  border-radius: 50%;
  background-color: #fff;
}

.player {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  color: black;
}

.player text {
  flex: 20%;
  text-align: center;
  font-size: 40rpx;
}

.player text:nth-child(3){
  font-size: 60rpx;
}

.player text:last-child{
  font-size: 38rpx;
}